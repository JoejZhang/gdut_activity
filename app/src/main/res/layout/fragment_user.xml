<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/mediumseagreen"
        android:orientation="horizontal">
        <com.rdc.gdut_activity.view.CircleImageView
            android:id="@+id/civ_user_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_person"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="12dp"
            android:layout_gravity="bottom"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2.5"
                android:text="研发一棵草"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="6dp"
                android:singleLine="true"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_user_sex"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_male"
                    android:padding="4dp"
                    android:layout_gravity="center" />
                <TextView
                    android:id="@+id/tv_user_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20岁"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4dp"/>
                <TextView
                    android:id="@+id/tv_user_area"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广东,广州,番禺"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:singleLine="true"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="2dp">
        <LinearLayout
            android:id="@+id/ll_user_details"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_linearlayout_bg"
            android:clickable="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_details"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="详细资料"
                android:textColor="#8a8a8a"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:background="@color/lightgray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:id="@+id/ll_user_activities"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_linearlayout_bg"
            android:clickable="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_activity"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的活动"
                android:textColor="#8a8a8a"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:clickable="false"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:background="@color/lightgray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:id="@+id/ll_user_gdut"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_linearlayout_bg"
            android:clickable="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icon_gdut"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="我的广工"
                android:textColor="#8a8a8a"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:clickable="false"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:background="@color/lightgray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:id="@+id/ll_user_about"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_linearlayout_bg"
            android:clickable="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_about"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="关于"
                android:textColor="#8a8a8a"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:clickable="false"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:background="@color/lightgray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:id="@+id/ll_user_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/selector_linearlayout_bg"
            android:clickable="true">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logout"
                android:layout_gravity="center"
                android:padding="8dp"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="注销"
                android:textColor="#8a8a8a"
                android:textSize="15sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:clickable="false"/>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_right_arrow"
                android:layout_gravity="center_vertical"
                android:padding="2dp"
                android:layout_marginRight="8dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.001dp"
            android:background="@color/lightgray"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
</LinearLayout>
