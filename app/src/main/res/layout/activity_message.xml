<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.rdc.gdut_activity.ui.MessageActivity">

    <com.rdc.gdut_activity.view.TopBar
        android:id="@+id/tb_activity_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_topbar_height"
        android:background="@color/colorPrimary"
        app:title="消息"
        app:titleTextColor="@color/white"
        app:leftButtonSize="@dimen/title_button_size"
        app:titleTextSize="@dimen/dimen_top_title_size">
    </com.rdc.gdut_activity.view.TopBar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_activity_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>
