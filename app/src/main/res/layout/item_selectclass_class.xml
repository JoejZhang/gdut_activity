<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rl_selectclass"
    >

    <TextView
        android:id="@+id/tv_item_selectclass_classname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="课程名称"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_item_selectclass_classtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_selectclass_classname"
        android:padding="5dp"
        android:text="课程时间"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_selectclass_classtime"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_selectclass_teacher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="课程教师"
            />

        <TextView
            android:id="@+id/tv_item_selectclass_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="已选人数"/>

    </LinearLayout>

</RelativeLayout>