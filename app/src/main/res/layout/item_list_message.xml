<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_item_message"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_message_icon"
        android:layout_width="@dimen/dimen_msg_icon"
        android:layout_height="@dimen/dimen_msg_icon"
        android:layout_margin="8dp"
        android:src="@drawable/verify_item_pic"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="8dp"
        >
        <TextView
            android:id="@+id/tv_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="联系人"
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_msg_name"
            />

        <TextView
            android:id="@+id/tv_message_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:maxLines="1"
            android:text="17:20"
            android:textSize="@dimen/dimen_msg_time"
            />

        <TextView
            android:id="@+id/tv_message_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_message_name"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="干嘛干嘛!"
            android:textSize="@dimen/dimen_msg_msg"/>
    </RelativeLayout>

</LinearLayout>