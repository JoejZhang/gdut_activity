<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_item_list_activity"
    android:background="@drawable/item_activity_click">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_item_user_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ueser_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_item_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/civ_item_user_icon"
            android:layout_toEndOf="@+id/civ_item_user_icon"
            tools:text="广工计院团委"
            android:textSize="13sp"
            android:layout_centerVertical="true"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_toLeftOf="@+id/tv_item_activity_default_text"
            android:layout_toStartOf="@+id/tv_item_activity_default_text"
            android:layout_centerVertical="true"
            android:src="@drawable/verify_icon_publish"
            android:scaleType="centerCrop"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"/>

        <TextView
            android:id="@+id/tv_item_activity_default_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发表于"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:layout_marginEnd="3dp"
            android:layout_toLeftOf="@+id/tv_item_activity_publish_time"
            android:layout_toStartOf="@+id/tv_item_activity_publish_time"/>

        <TextView
            android:id="@+id/tv_item_activity_publish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:text="2017-5-6"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_item_activity_pic"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/verify_item_pic"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"/>

    <TextView
        android:id="@+id/tv_item_activity_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:text="研发中心招新宣讲会开始啦啦啦"
        android:textSize="16sp"
        android:textColor="@color/dark_text_verify"
        android:maxLines="1"
        android:ellipsize="end"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_item_activity_default_time"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/verify_iv_time"
            android:scaleType="fitCenter"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_verify_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toRightOf="@+id/iv_item_activity_default_time"
            android:layout_toEndOf="@+id/iv_item_activity_default_time"
            tools:text="2017-5-8 19:00"
            android:textSize="12sp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/iv_item_activity_default_place"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/verify_iv_place"
            android:scaleType="fitCenter"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_verify_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_item_activity_default_place"
            android:layout_toEndOf="@+id/iv_item_activity_default_place"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            tools:text="广东工业大学工一学术报告厅"
            android:textSize="12sp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/gainsboro"/>
</LinearLayout>